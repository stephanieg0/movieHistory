<!--Movie Poster with buttons and stars-->
{{#each this}}
	{{#if inactive}}
		{{else}}
			{{#if added}} <!-- If added is true; show trash icon-->			
				{{!-- <div class="col-md-3"> --}}
				<div class="col-xs-6 col-md-3">
    				<a href="#" class="thumbnail">
						<span type="button" class="btn btn-default btn-sm 
				  			glyphicon glyphicon-trash" id="delete" yep="{{imdbID}}" aria-hidden="true">
						</span>		
				{{else}}
				<div class="col-xs-6 col-md-3 no-poster">
					<a href="#" class="thumbnail">
			{{/if}}<!-- end of added -->

			{{#if Poster}}<!-- If there is a poster key; show poster image=url-->

				<img src="http://img.omdbapi.com/?i={{imdbID}}&apikey=7c212437" class="movieCast movie-posters-dimensions" alt="{{title}}" data-toggle="modal" data-target="#movieInfoModal" id="{{imdbID}}"
				></img>		
				{{else}}<!-- If not poster is found; show title only -->
					<div class="movie-titles noposter movieCast" data-toggle="modal" data-target="#movieInfoModal" id="{{imdbID}}">{{Title}}</div>
			{{/if}}<!--end of Poster-->

			{{#if added}}<!-- If added and If watched is true; show stars for rating-->
				{{#if watched}}
					<div class="star-container" id="{{@key}}">
					  <span class="star-rating" id="{{@key}}">
					{{#times stars}} <!--"times" is a handlebars helper in the dependencies.js that adds img=src the number of times registered in the value key; if value key is 0, times will not add yellow star image-->
					    <img src='data:image/svg+xml;base64,'>
					{{/times}}
					    <input type="radio" name="rating" value="1"><i></i>
					    <input type="radio" name="rating" value="2"><i></i>
					    <input type="radio" name="rating" value="3"><i></i>
					    <input type="radio" name="rating" value="4"><i></i>
					    <input type="radio" name="rating" value="5"><i></i>
					    <input type="radio" name="rating" value="6"><i></i>
					    <input type="radio" name="rating" value="7"><i></i>
					    <input type="radio" name="rating" value="8"><i></i>
					    <input type="radio" name="rating" value="9"><i></i>
					    <input type="radio" name="rating" value="10"><i></i>
					  </span>
					</div>
					{{else}}
						<div type="button" class="btn btn-success watch-button" id="{{imdbID}}">Watch</div>
				{{/if}}<!-- end of watched -->

				{{else}}
					<div type="button" class="btn btn-warning add-button" imdb="{{imdbID}}">Add</div>
			{{/if}}<!--end of added-->
				</a>
			</div><!-- end of col-md-3-->
	{{/if}}<!--end of inactive -->
{{/each}}<!--end of this-->