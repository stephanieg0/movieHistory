<!--Movie Poster with buttons and stars-->
{{#each Search}}
<div class="col-md-3">
	{{#if Poster}}
		<img src="http://img.omdbapi.com/?i={{imdbID}}&apikey=7c212437">
	{{else}}
		<div class="movie-titles">{{Title}}</div>
	{{/if}}
	<!--Add Button-->
	<div><button type="button" class="btn btn-default add-button" imdb="{{imdbID}}">Add</button>
	<button type="button" class="btn btn-default watch-button" id="{{@key}}">Watch</button></div>
	
	 <!--Stars Rating-->
	 <!--stars are hidden until watched button is clicked-->
	<div class="star-container" id="{{@key}}">
	  <span class="star-rating">
	    <input type="radio" name="rating" value="1"><i></i>
	    <input type="radio" name="rating" value="2"><i></i>
	    <input type="radio" name="rating" value="3"><i></i>
	    <input type="radio" name="rating" value="4"><i></i>
	    <input type="radio" name="rating" value="5"><i></i>
	  </span>
	</div>
</div>

{{/each}}


